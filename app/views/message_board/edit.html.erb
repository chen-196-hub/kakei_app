<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
  </div>
  <%= form_tag("/message_board/#{@group_id}/#{@message.id}/update") do %>
    <div class="form">
      <div class="form-body">
        <% @message.errors.full_messages.each do |message| %>
              <div class="form-error">
                <%= message %>
              </div>
          <% end %>
        <textarea name = "content"><%= @message.content %></textarea>
        <input type="submit" value="保存">
      </div>
    </div>
  <% end %>
</div>